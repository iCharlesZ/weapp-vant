/**index.wxss**/
.home {
  width: 100%;
}

.home .search-box {
  width: 100%;
  height: 100rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}

.home .swiper {
  height: 400rpx;
  width: 100%;
  margin-top: 100rpx;
}

.home .swiper image {
  width: 100%;
  height: 400rpx;
}

.home .recommend {
  width: 96%;
  padding: 2%;
  display: flex;
  flex: 1;
  flex-wrap: wrap;
  background-color: #eee;
  position: relative;
}

.home .recommend .commodity {
  width: 46%;
  margin: 20rpx 2%;
  border-radius: 10px;
  overflow: hidden;
  background-color: #fff;
  position: relative;
}

.home .recommend .commodity .title {
  padding: 20rpx;
  font-size: 16px;
  color: #333;
}

.home .recommend .commodity .desc {
  padding: 0 20rpx 50rpx 20rpx;
  font-size: 12px;
  color: #666;
}