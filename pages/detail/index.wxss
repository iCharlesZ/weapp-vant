/* pages/detail/index.wxss */
.detail {
  background-color: #eee;
}

.detail .description {
  padding: 50rpx 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
}

.detail .description text {
  display: block;
}

.detail .description text.name {
  font-size: 16px;
  color: #333;
}

.detail .description text.price {
  font-size: 14px;
  color: red;
  margin-top: 20rpx;
}

.detail .select {
  margin-top: 20rpx;
  padding: 30rpx 20rpx;
  background-color: #fff;
  font-size: 16px;
  display: flex;
  align-items: center;
  color: #666;
}

.detail .select .icon {
  position: absolute;
  right: 40rpx;
}

.detail .introduction {
  margin-top: 20rpx;
  padding: 50rpx 20rpx;
  background-color: #fff;
  padding-bottom: 200rpx;
}

.detail .introduction .title+view {
  margin: 10rpx 0;
  color: #666;
  font-size: 14px;
}

.detail .sheet-view {
  padding: 20px;
}

.detail .sheet-view .priceName {
  position: absolute;
  top: 20px;
  left: 130px;
}

.detail .sheet-view .priceName text {
  display: block;
  margin: 20rpx 0;
}

.detail .sheet-view .priceName text:first-child {
  font-size: 14px;
  color: #333;
}

.detail .sheet-view .priceName text:last-child {
  font-size: 14px;
  color: red;
}

.detail .sheet-view .items {
  display: flex;
  margin-bottom: 40px;
  font-size: 12px;
}

.detail .sheet-view .items view {
  padding: 5px 10px;
  border: 1px solid #999;
  margin: 10px;
}

.detail .sheet-view .items view:first-child {
  border: 1px solid red;
  color: red;
}